<div class='container'>
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {multipart: true}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, autocomplete: "off", :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :bio %><br />
    <%= f.text_field :bio, autocomplete: "off", :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :dob %><br />
    <%= f.date_field :dob, autocomplete: "off", :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :gender %><br />
    <%= f.text_field :gender, autocomplete: "off", :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :postcode %><br />
    <%= f.text_field :postcode, autocomplete: "off", :class=>"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :location %><br />
    <%= f.text_field :location, autocomplete: "off", :class=>"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :interested_in %><br />
    <%= f.text_field :interested_in, autocomplete: "off", :class=>"form-control" %>
  </div>

  <div class="form-group">
  <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", :class=>"btn btn-success" %>
  </div>
<% end %>

</div>

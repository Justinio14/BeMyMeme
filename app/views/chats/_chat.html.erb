<li>
  <div class="panel panel-default" data-conversation-id="<%= chat.id %>">
    <div class="panel-heading">
      <%= link_to chat.opposed_user(user).username, '', class: 'toggle-window' %>
      <%= link_to "x", '', class: "btn btn-default btn-xs pull-right" %>
    </div>

    <div class="panel-body" style="display: none;">
      <div class="messages-list">
        <ul>
          <%= render 'chats/chat_content', messages: chat.messages, user: user %>
        </ul>
      </div>
    </div>
  </div>
</li>

<html>

<% if user_signed_in? %>
  <%= link_to 'Add Memes', meme_gallery_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  %>
  <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
  <% @user.each do |user| %>
    <% unless user.id == current_user.id %>
      <div class="user">
        <%= image_tag user.image.url(:thumb) %><br />
        <%= user.username %><br />
        <%= user.gender %><br />
        <%= user.location %><br/>
          <br />
        </div>
    </br/>
    <% end %>
  <% end %>
<% end %>

</html>
